<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_back"
            android:text="Back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:textSize="16dp"
            />

    <Button
            android:theme="@style/AppTheme.ButtonCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TTS"
            android:id="@+id/button_tts"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            />

    <TextView
            android:text="TextView With a lot of Text Yeah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_quiz"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toBottomOf="@+id/label_back"
            android:layout_marginTop="16dp"
            android:textSize="32dp"
            android:textColor="@android:color/black"
            />

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_quiz"
            app:layout_constraintBottom_toBottomOf="parent"
            >

        <Space
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        <include
                layout="@layout/fragment_learn_choice_button"
                android:id="@+id/choice_1"
                />

        <Space
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        <include
                layout="@layout/fragment_learn_choice_button"
                android:id="@+id/choice_2"
                />

        <Space
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        <include
                layout="@layout/fragment_learn_choice_button"
                android:id="@+id/choice_3"
                />

        <Space
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        <include
                layout="@layout/fragment_learn_choice_button"
                android:id="@+id/choice_4"
                />

        <Space
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>