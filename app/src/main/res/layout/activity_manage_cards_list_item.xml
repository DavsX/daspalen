<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:id="@+id/listElementContainer">

    <TextView
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:id="@+id/textview_id_card"
            android:text="wordId"
            android:gravity="center_vertical|center_horizontal"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"/>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textview_id_card">

        <TextView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:id="@+id/textview_learn_score"
                android:text="5"
                android:gravity="center_vertical|center_horizontal"
                android:layout_alignParentRight="true"
                android:textSize="25dp"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"/>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toLeftOf="@+id/textview_learn_score"
                android:id="@+id/wordTexts">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/textview_front"
                    android:text="originalText"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/textview_back"
                    android:text="translatedText"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
