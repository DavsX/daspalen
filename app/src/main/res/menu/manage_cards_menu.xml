<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto">

    <item
            android:id="@+id/action_new_word"
            android:icon="@drawable/baseline_add_circle_outline_24"
            android:title="New Card"
            app:showAsAction="always"
            />

    <item
            android:id="@+id/action_search"
            android:icon="@drawable/baseline_search_24"
            android:title="Search"
            app:showAsAction="always|collapseActionView"
            app:actionViewClass="android.support.v7.widget.SearchView"
            />

    <group
            android:id="@+id/group_card_type"
            android:checkableBehavior="all">

        <item
                android:id="@+id/checkbox_show_incomplete"
                android:title="Show Incomplete cards"
                android:theme="@style/Theme.AppCompat"
                app:actionViewClass="android.widget.CheckBox"
                app:showAsAction="never|withText"
                android:checkable="true"/>

        <item
                android:id="@+id/checkbox_show_learn"
                android:title="Show Learnable cards"
                android:theme="@style/Theme.AppCompat"
                app:actionViewClass="android.widget.CheckBox"
                app:showAsAction="never|withText"
                android:checkable="true"/>

        <item
                android:id="@+id/checkbox_show_review"
                android:title="Show Reviewable cards"
                android:theme="@style/Theme.AppCompat"
                app:actionViewClass="android.widget.CheckBox"
                app:showAsAction="never|withText"
                android:checkable="true"/>

    </group>

</menu>